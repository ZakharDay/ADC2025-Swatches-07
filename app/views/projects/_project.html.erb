<div id="<%= dom_id project %>">
  <h2><%= link_to project.name, project %></h2>
  <p><%= project.description %></p>

  <div class="fillsTeaser">
    <% project.swatches.each do |swatch| %>
      <% swatch.fills.each do |fill| %>
        <%= render "projects/fill", fill: fill %>
      <% end %>
    <% end %>
  </div>
</div>

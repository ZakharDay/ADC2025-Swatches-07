<div id="<%= dom_id project %>">
  <h2><%= link_to project.name, [:admin, project] %></h2>
  <p><%= project.description %></p>
  <p><%= link_to "New swatch", new_admin_project_swatch_path(project) %></p>

  <% project.swatches.each do |swatch| %>
    <%= render "admin/projects/swatch", swatch: swatch %>
  <% end %>
</div>